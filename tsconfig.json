{
  "compilerOptions": {
    "target": "es2020", //required for use with BigInt types
    "lib": ["es2020"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "strict": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "test"],
  "exclude": ["node_modules", "build"]
}
